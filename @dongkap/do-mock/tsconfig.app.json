{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/@dongkap/do-mock",
    "baseUrl": "./",
    "paths": {
      "@dongkap/do-shared": [
        "../../@dongkap/do-shared/src"
      ],
      "@dongkap/do-shared/*": [
        "../../@dongkap/do-shared/src/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "../../node_modules/@nebular/**/*.spec.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "../../node_modules/@nebular/**/*.ts"
  ]
}
